@page
@inject IHtmlLocalizer<AccountResource> L
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Public.Web.Pages.Account
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Blockquote
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Button
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@model Volo.Abp.Account.Public.Web.Pages.Account.SendSecurityCodeModel
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["TwoFactorVerification"].Value;
}
@section scripts {
    <abp-script-bundle name="@typeof(SendSecurityCodeModel).FullName">
        <abp-script src="/Pages/Account/SendSecurityCode.js"/>
    </abp-script-bundle>
}

<form method="post">
    <p id="SendSecurityCode_Information" style="display: none;">
        @L["SendSecurityCode_Information"]
    </p>
    <abp-input asp-for="RememberMe"/>
    <abp-select asp-for="SelectedProvider" asp-items="@Model.Providers"/>
    <abp-button type="submit" button-type="Primary" text="@L["Submit"].Value"/>
</form>

<div class="mt-3" id="loginWithRecoveryCode" style="display: none;">
    <p>
        <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">@L["LoginWithRecoveryCode_URL"]</a>.
    </p>
</div>
