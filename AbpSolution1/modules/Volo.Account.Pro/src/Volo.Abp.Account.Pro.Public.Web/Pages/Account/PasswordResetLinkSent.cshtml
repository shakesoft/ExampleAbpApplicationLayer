@page
@model Volo.Abp.Account.Public.Web.Pages.Account.PasswordResetLinkSentModel
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.Account.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Blockquote
@inject IHtmlLocalizer<AccountResource> L
@{
    PageLayout.Content.Title = L["ForgotPassword"].Value;
}

<div id="account_module_password_reset_page_content">
    <p>@L[Model.PreventEmailEnumeration ? "PreventEmailEnumerationPasswordResetMailSentMessage" : "PasswordResetMailSentMessage"]</p>
    <div class="mt-4">
        <a abp-button="Primary" asp-page="./Login" asp-all-route-data="@(new Dictionary<string, string> {{"returnUrl", Model.ReturnUrl}, {"returnUrlHash", Model.ReturnUrlHash}})">&larr; @L["BackToLogin"]</a>
    </div>
</div>
