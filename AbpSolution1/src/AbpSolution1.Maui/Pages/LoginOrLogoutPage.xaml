<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AbpSolution1.Maui.ViewModels"
             x:Class="AbpSolution1.Maui.Pages.LoginOrLogoutPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewModels:LoginOrLogoutViewModel"
             x:Name="loginOrLogoutPage">
    
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
                EventName="Appearing"
                Command="{Binding LoginOrLogoutCommand}"
                BindingContext="{Binding Path=BindingContext, Source={x:Reference loginOrLogoutPage}, x:DataType=ContentPage}" />
    </ContentPage.Behaviors>
    
    <Grid>
        <ActivityIndicator IsRunning="True" HorizontalOptions="Center" VerticalOptions="Center" />
    </Grid>
</ContentPage>